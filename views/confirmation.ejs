<!DOCTYPE html>
<html>
	<head>
		<title>Banvas Corfirm</title>
	</head>
	<body>
		<% if(err==0){ %>
			<script>
				var exdate = new Date();
				exdate.setDate(exdate.getDate() + 365);
				var id_value=escape("<%= id %>")+"; expires="+exdate.toUTCString();
				console.log(id_value);
				document.cookie="Banvas_id" + "=" + id_value;
				var token_value=escape("<%= token %>")+"; expires="+exdate.toUTCString();
				console.log(token_value);
				document.cookie="Banvas_token" + "=" + token_value;
				setInterval(function(){
					if(getCookie('Banvas_token'))
						window.location.replace('/<%= id %>');
					},500);	
				function getCookie(c_name){
					var i,x,y,ARRcookies=document.cookie.split(";");
				for (i=0;i<ARRcookies.length;i++)
				{
					x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
					y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
					x=x.replace(/^\s+|\s+$/g,"");
				if (x==c_name)
						{
							return unescape(y);
						}
					}
				}
			</script>
		<% }
		else { %>
			<h1> Your confirmation token is Wrong!!! </h1> 
			<h1> Please register it again <h1>
			<h2> If you have any question, contact b99902006@ntu.edu.tw <h2>
			<h2> Redirect You To The Home Page </h2>
			<script>
				setTimeout(function(){window.location = '/'}, 3000);
			</script>
		<% } %>
	</body>
</html>
