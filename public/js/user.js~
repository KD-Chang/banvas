var eventnum = 0;
var scrollbar = $('.scroller').slider({
	slide: function( event, ui ) {
	    console.log("test");
	}
});
$(".edit").click(edit_mode);
function edit_mode(){
		$(this).html("Done").removeClass("edit").click(function(){
			save();
			$(this).html("Edit").addClass("edit");
			$(".static").unbind('click');
			$(".edit").bind('click',edit_mode);
		});
		$(".static").click(edit).change(save).end();
		scrollbar.unbind('slide').bind('slide',function( event, ui ) {
	    			console.log("test2");
	   	});
}
function save(){
			var temp=$(".editing").val();
			$(".editing").replaceWith(temp);
			$(".changing").removeClass("changing").addClass("static").bind('click',edit);
}
function edit(){
			temp=$(this).removeClass("static").addClass("changing").html();
			$(this).html('<input class=\"editing\" type="text" value=\''+temp+'\'>').unbind('click');
	
}

	

